{
  "name": "helabet_livestreams",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n server,client -c magenta,blue \"npm:server:dev\" \"npm:client:dev\"",
    "client:dev": "vite --port 5173 --strictPort --host --open=false",
    "client:build": "vite build",
    "build": "tsc -p tsconfig.server.json",
    "preview": "vite preview --port 5173 --strictPort --host",
    "server:dev": "tsx watch src/express/server.ts",
    "server:start": "node dist/server/src/express/server.js",
    "server:build": "tsc -p tsconfig.server.json",
    "lint": "eslint .",
    "test": "vitest run",
    "codex:serve": "nohup npm run preview >/tmp/preview.log 2>&1 &",
    "codex:wait": "wait-on -t 180000 http://localhost:5173",
    "codex": "npm run build && npm run codex:serve && npm run codex:wait",
    "dev:express": "tsx src/express/server.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.0",
    "hls.js": "^1.5.15",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.5",
    "set-cookie-parser": "^2.7.0",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/set-cookie-parser": "^2.4.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "nock": "^14.0.5",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^7.1.7",
    "vitest": "^4.0.7",
    "wait-on": "^9.0.1"
  }
}
